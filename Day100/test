import random


class Card(object):
    """一张牌"""
    def __init__(self,suite,face):
        self._suite=suite
        self._face=face

    @property
    def suite(self):
        return self._suite
    
    @property
    def face(self):
        return self._face
    
    def __str__(self):
        if self._face==1:
            self._face='A'
        elif self._face==11:
            self._face='J'
        elif self._face==12:
            self._face='Q'
        elif self._face==13:
            self._face='K'
        else:
            self._face=str(self._face)

        return '%s%s' %(self._suite,self._face)
    
    def __repr__(self) -> str:
        return self.__str__()

class Poker(object):
    def __init__(self) -> None:
        self._cards=[Card(suite,face) for suite in '♠♥♣♦' for face in range(1,14)]
        self._current=0
        self._cards.extend([Card('B','K'),Card('S','Q')])

    @property
    def cards(self):
        return self._cards
    
    def shuffle(self):
        random.shuffle(self._cards)
        self._current=0

    @property
    def push_card(self):
        while self.has_cards:
            card = self._cards[self._current]
            self._current+=1
            return card
    
    @property
    def has_cards(self):
        return self._current < len(self._cards)


class Player(object):
    def __init__(self,name) -> None:
        self._name=name
        self._cards_on_hand=[]

    @property
    def name(self):
        return self._name
    
    @property
    def cards_on_hand(self):
        return self._cards_on_hand
    
    
    def get_card(self,card):
        self._cards_on_hand.append(card)

    def arrange(self,key_card):
        self._cards_on_hand.sort(key=key_card)
        


def get_key(card):
    return (card.suite,card.face)

def main():
    c=Poker()
    c.shuffle()
    players=[Player('jerry'),Player('kian'),Player('justin')]
    for _ in range(18):
        for player in players:
            player.get_card(c.push_card)
    for player in players:
        print(player.name,':', end=' ')
        player.arrange(get_key)
        print(player.cards_on_hand)

if __name__=='__main__':
    main()
